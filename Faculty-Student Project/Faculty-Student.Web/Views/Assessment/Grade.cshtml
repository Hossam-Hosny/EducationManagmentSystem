@model GradeSubmissionViewModel

@{
    ViewData["Title"] = "Grade Submission";
    var sub = Model.Submission;
}

<div class="container-fluid">
    <h2 class="mb-4">Grade Submission</h2>

    <div class="card p-3 shadow-sm mb-4">
        <p><strong>Student:</strong> @sub.FullName</p>
        <p><strong>Submitted At:</strong> @sub.SubmittedAt.ToString("g")</p>
        <p><strong>File:</strong> <a href="@sub.FilePath" target="_blank">View</a></p>
    </div>

    <form asp-action="SubmitGrades" method="post">
        <input type="hidden" name="SubmissionId" value="@sub.SubmissionId" />
        <input type="hidden" name="AssignmentId" value="@Model.AssignmentId" />

        <div class="card p-3 shadow-sm">
            <h4 class="mb-3">Assessment Criteria</h4>

            @for (int i = 0; i < Model.CriteriaList.Count; i++)
            {
                <div class="mb-3">
                    <label><strong>@Model.CriteriaList[i].CriteriaName</strong> (Max: @Model.CriteriaList[i].MaxScore)</label>
                    <input type="hidden" name="Grades[@i].CriteriaId" value="@Model.CriteriaList[i].CriteriaId" />
                    <input type="number" name="Grades[@i].Score" class="form-control mt-1" placeholder="Score" max="@Model.CriteriaList[i].MaxScore" required />
                    <input type="text" name="Grades[@i].Remark" class="form-control mt-2" placeholder="Remark (optional)" />
                </div>
            }

            <button type="submit" class="btn btn-primary mt-3">Submit Grades</button>
        </div>
    </form>
</div>

@model IEnumerable<AssignmentDto>

@{
    ViewData["Title"] = "Your Assignments";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Assignments</h1>

    <a asp-action="Create" class="btn btn-success mb-3">+ New Assignment</a>

    <table class="table table-striped table-bordered shadow">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Due Date</th>
                <th>Description</th>
                <th>File</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.DueDateTime.ToString("g")</td>
                    <td>@item.Description</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.FilePath))
                        {
                            <a href="@item.FilePath" target="_blank">Open</a>
                        }
                        else
                        {
                            <span class="text-muted">No file</span>
                        }
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>

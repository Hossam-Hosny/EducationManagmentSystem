@model UpdateAssignmentDto

@{
    ViewData["Title"] = "Edit Assignment";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Edit Assignment</h1>

    <form asp-action="Edit" method="post" class="card p-4 shadow">

        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="form-group mt-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        </div>

        <div class="form-group mt-3">
            <label asp-for="DueDateTime"></label>
            <input asp-for="DueDateTime" type="datetime-local" class="form-control" />
        </div>

        <div class="form-group mt-3">
            <label asp-for="FilePath"></label>
            <input asp-for="FilePath" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary mt-4">Save Changes</button>
        <a asp-action="List" class="btn btn-secondary mt-4">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
